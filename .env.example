# Robust Recommendation System - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API (for Agent B - Consistency Judge)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: Use local models via Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# HuggingFace (optional, for embeddings)
HUGGINGFACE_API_KEY=your_hf_key_here

# Data paths
DATA_DIR=./data
OUTPUT_DIR=./output
MODELS_DIR=./models

# Processing settings
RANDOM_SEED=42
NUM_WORKERS=4

# LLM settings
LLM_PROVIDER=openai  # openai, ollama, or huggingface
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=256
LLM_TEMPERATURE=0.0

# Filtering thresholds
MIN_ITEM_INTERACTIONS=20
MIN_USER_INTERACTIONS=5
MIN_ITEM_RATINGS_FOR_VARIANCE=50
TOP_VARIANCE_ITEMS=1500
